<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="${basedir}/mcp-nexus-internal.log">

    <targets>
        <target xsi:type="File" name="mainFile" fileName="${basedir}/mcp-nexus.log"
                layout="${time} [${level:uppercase=true}] ${message} ${exception:format=ToString}"
                archiveFileName="${basedir}/archive/mcp-nexus-${shortdate}-{##}.log"
                archiveEvery="Day"
                archiveNumbering="Sequence"
                maxArchiveFiles="30"
                keepFileOpen="false"
                autoFlush="true"
                createDirs="true" />
        
        <target xsi:type="EventLog" name="eventLog" 
                source="MCP-Nexus"
                eventId="1000"
                layout="${message} ${exception:format=ToString}" />
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="mainFile" />
        <logger name="*" minlevel="Warn" writeTo="eventLog" />
    </rules>
</nlog>