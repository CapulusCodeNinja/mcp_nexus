<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/mcp-nexus-internal.log">

    <targets>
        <target xsi:type="File" name="mainFile" fileName="logs/mcp-nexus.log"
                layout="${time} [${level:uppercase=true}] ${message} ${exception:format=ToString}"
                archiveFileName="logs/archive/mcp-nexus-${shortdate}-{##}.log"
                archiveEvery="Day"
                archiveNumbering="Sequence"
                maxArchiveFiles="30"
                keepFileOpen="false"
                concurrentWrites="true"
                autoFlush="true"
                flushTimeout="5000" />
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="mainFile" />
    </rules>
</nlog>