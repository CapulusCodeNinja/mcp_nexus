<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>winaidbg_engine_extensions</AssemblyName>
    <RootNamespace>WinAiDbg.Engine.Extensions</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>winaidbg_engine_extensions_unittests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.3" />
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\winaidbg_config\winaidbg_config.csproj" />
    <ProjectReference Include="..\..\winaidbg_external_apis\winaidbg_external_apis.csproj" />
    <ProjectReference Include="..\winaidbg_engine_share\winaidbg_engine_share.csproj" />
  </ItemGroup>

  <!-- Copy ExtensionScripts to output directory as "extensions" -->
  <ItemGroup>
    <Content Include="ExtensionScripts\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>extensions\%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)" PrivateAssets="all" />
  </ItemGroup>

</Project>
